{
  "name": "fern",
  "description": "Fern API",
  "repository": "https://github.com/fern-api/fern",
  "author": "Birch Solutions, Inc.",
  "private": true,
  "workspaces": [
    "packages/**",
    "!packages/**/lib",
    "!packages/**/dist",
    "!packages/**/generated"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach --verbose --parallel run clean",
    "compile": "yarn workspace @fern-api/compile-root run compile",
    "test": "yarn compile && jest --passWithNoTests",
    "test:ete": "yarn workspace @fern-api/cli dist:cli:prod && yarn workspace @fern-api/ete-tests test",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:monorepo": "mrlint lint",
    "lint:monorepo:fix": "yarn lint:monorepo --fix",
    "lint:style": "stylelint 'packages/**/src/**/*.scss' --allow-empty-input --max-warnings 0",
    "lint:style:fix": "yarn lint:style --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ./shared/.prettierignore",
    "format:all": "yarn format \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ./shared/.prettierignore \"**\"",
    "depcheck": "yarn workspaces foreach --verbose --parallel run depcheck",
    "codegen:local": "yarn fern:local generate",
    "fern:local": "yarn workspace @fern-api/cli dist:cli:prod && node $(yarn workspace @fern-api/cli bin fern:prod)",
    "fern-dev:local": "yarn workspace @fern-api/cli dist:cli:dev && node $(yarn workspace @fern-api/cli bin fern:dev)",
    "publish": "yarn workspaces foreach --no-private --parallel --verbose npm publish --access public",
    "docs:preview": "yarn workspace @fern-api/docs start",
    "add-package": "yarn mrlint add-package",
    "fern-script": "yarn workspace @fern-api/scripts dist:cli && node $(yarn workspace @fern-api/scripts bin fern-scripts)",
    "generate-json-schema": "yarn fern-script write-json-schema",
    "root-package:check": "yarn fern-script check-root-package",
    "root-package:fix": "yarn root-package:check --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@blueprintjs/eslint-plugin": "^2.1.2",
    "@blueprintjs/stylelint-plugin": "^2.0.8",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^28.1.6",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chalk": "^5.0.1",
    "depcheck": "^1.4.3",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.19.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-jest": "^26.5.3",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "immer": "^9.0.15",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^12.3.7",
    "lodash-es": "^4.17.21",
    "mrlint": "^0.0.101",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "4.6.4"
  },
  "packageManager": "yarn@3.2.2",
  "dependenciesMeta": {
    "vite": {
      "unplugged": true
    }
  }
}
