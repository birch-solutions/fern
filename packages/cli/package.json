{
  "name": "fern-api",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "bin": {
    "fern": "./cli"
  },
  "scripts": {
    "clean": "tsc --build clean tsconfig.json && tsc --build clean tsconfig.cjs.json",
    "compile": "tsc --build tsconfig.json && tsc --build tsconfig.cjs.json",
    "test": "jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore",
    "lint:eslint:fix": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --fix",
    "lint:style": "stylelint '**/*.scss' --allow-empty-input --max-warnings 0",
    "lint:style:fix": "stylelint '**/*.scss' --allow-empty-input --max-warnings 0 --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@fern-api/add-plugin": "workspace:*",
    "@fern-api/api": "workspace:*",
    "@fern-api/compiler": "workspace:*",
    "@fern-api/compiler-commons": "workspace:*",
    "@fern-api/init": "workspace:*",
    "@fern-api/plugin-runner": "workspace:*",
    "@fern-api/syntax-analysis": "workspace:*",
    "chalk": "^4.1.2",
    "execa": "^5.1.1",
    "glob": "^7.2.0",
    "glob-promise": "^4.2.2",
    "js-yaml": "^4.1.0",
    "tar": "^6.1.11",
    "tmp-promise": "^3.0.3",
    "yargs": "^17.4.1",
    "zod": "^3.14.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.33",
    "@types/tar": "^6.1.1",
    "@types/tmp": "^0.2.3",
    "@types/yargs": "^17.0.10",
    "depcheck": "^1.4.3",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "stylelint": "^14.6.1",
    "typescript": "^4.6.4"
  }
}
