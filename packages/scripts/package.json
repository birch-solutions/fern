{
  "name": "@fern-api/scripts",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fern-api/fern.git",
    "directory": "packages/scripts"
  },
  "private": true,
  "files": [
    "lib"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "bin": {
    "fern-scripts": "./dist/bundle.cjs"
  },
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "test": "yarn compile && jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore",
    "lint:eslint:fix": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "depcheck": "depcheck",
    "dist:cli": "yarn compile && node build.cjs",
    "publish:cli": "yarn dist:cli && cd dist && yarn npm publish"
  },
  "dependencies": {
    "@fern-api/json-schema": "workspace:*",
    "chalk": "^5.0.1",
    "execa": "^5.1.1",
    "immer": "^9.0.15",
    "lodash-es": "^4.17.21",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^28.1.7",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.7.6",
    "@types/yargs": "^17.0.10",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.14",
    "depcheck": "^1.4.3",
    "esbuild": "^0.14.50",
    "eslint": "^8.22.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "typescript": "4.6.4"
  }
}
